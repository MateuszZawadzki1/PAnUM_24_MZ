<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wprowadź liczbę (dziesiętna)"
        android:inputType="number" />

    <Button
        android:id="@+id/convert_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Przelicz" />

    <TextView
        android:id="@+id/result_binary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dwójkowo: " />

    <TextView
        android:id="@+id/result_quaternary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Czwórkowo: " />

    <TextView
        android:id="@+id/result_octal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ósemkowo: " />

    <TextView
        android:id="@+id/result_hex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Szesnastkowo: " />
</LinearLayout>